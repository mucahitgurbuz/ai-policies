{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://ai-policies.dev/schemas/manifest.json",
  "title": "AI Policies Manifest v2",
  "description": "Configuration file schema for AI Policies v2.0 (.ai-policies.yaml)",
  "type": "object",
  "required": ["extends", "output"],
  "properties": {
    "extends": {
      "type": "array",
      "description": "Policy packages to extend (array order matters - last wins)",
      "items": {
        "type": "string",
        "description": "Package name (npm) or local path (starts with ./ or /)"
      },
      "minItems": 1,
      "examples": [
        ["@ai-policies/core", "@ai-policies/frontend-react", "./team-policies"]
      ]
    },
    "output": {
      "type": "object",
      "description": "Output file paths for different IDE providers",
      "properties": {
        "cursor": {
          "type": "string",
          "description": "Path for Cursor rules file (.cursorrules)",
          "pattern": "^[^\\\\:*?\"<>|]+$"
        },
        "copilot": {
          "type": "string",
          "description": "Path for GitHub Copilot instructions file",
          "pattern": "^[^\\\\:*?\"<>|]+$"
        }
      },
      "additionalProperties": false,
      "anyOf": [
        { "required": ["cursor"] },
        { "required": ["copilot"] },
        { "required": ["cursor", "copilot"] }
      ]
    },
    "protected": {
      "type": "array",
      "description": "Partial IDs that cannot be overridden by later packages",
      "items": {
        "type": "string",
        "pattern": "^[a-z0-9-]+$"
      },
      "uniqueItems": true,
      "examples": [["core-safety", "no-hardcoded-secrets"]]
    },
    "exclude": {
      "type": "array",
      "description": "Partial IDs to exclude from final output",
      "items": {
        "type": "string",
        "pattern": "^[a-z0-9-]+$"
      },
      "uniqueItems": true
    }
  },
  "additionalProperties": false
}
