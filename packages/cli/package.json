{
  "name": "@ai-policies/cli",
  "version": "1.0.0",
  "description": "CLI for managing AI IDE policies",
  "type": "module",
  "bin": {
    "ai-policies": "./dist/index.js"
  },
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "clean": "rm -rf dist",
    "typecheck": "tsc --noEmit",
    "test": "vitest"
  },
  "dependencies": {
    "@ai-policies/core-schemas": "workspace:*",
    "@ai-policies/compose-engine": "workspace:*",
    "@ai-policies/provider-cursor": "workspace:*",
    "@ai-policies/provider-copilot": "workspace:*",
    "@ai-policies/policy-registry": "workspace:*",
    "chalk": "^5.3.0",
    "fs-extra": "^11.2.0",
    "glob": "^10.3.10",
    "inquirer": "^9.2.15",
    "js-yaml": "^4.1.0",
    "semver": "^7.6.0",
    "yargs": "^17.7.2",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/fs-extra": "^11.0.4",
    "@types/inquirer": "^9.0.7",
    "@types/js-yaml": "^4.0.9",
    "@types/semver": "^7.5.6",
    "@types/yargs": "^17.0.32"
  }
}
